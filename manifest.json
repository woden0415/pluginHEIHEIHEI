{
  "manifest_version": 2,

  "name": "yWall",
  "description": "添加需要屏蔽的网站，跳到自己设定的网址。",

  "version": "1.0",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    // 2种指定方式，如果指定JS，那么会自动生成一个背景页
    "page": "./background/background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "./content/content_script.js"
      ],
      "run_at": "document_start"
    }
  ]
}
